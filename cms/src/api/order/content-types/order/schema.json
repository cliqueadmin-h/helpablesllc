{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": "Payment orders and transactions"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "amount": {
      "type": "integer",
      "required": true,
      "min": 0
    },
    "currency": {
      "type": "string",
      "required": true,
      "default": "usd"
    },
    "service": {
      "type": "string",
      "required": true
    },
    "customerEmail": {
      "type": "email",
      "required": true
    },
    "customerName": {
      "type": "string",
      "required": false
    },
    "customerPhone": {
      "type": "string",
      "required": false
    },
    "paymentIntentId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "stripeCustomerId": {
      "type": "string",
      "required": false
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "processing",
        "succeeded",
        "failed",
        "canceled",
        "refunded"
      ],
      "default": "pending",
      "required": true
    },
    "paymentMethod": {
      "type": "string",
      "required": false
    },
    "metadata": {
      "type": "json",
      "required": false
    },
    "receiptUrl": {
      "type": "string",
      "required": false
    },
    "errorMessage": {
      "type": "text",
      "required": false
    }
  }
}
